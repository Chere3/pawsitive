---
interface Props {
  title: string;
  description: string;
  icon: string;
  status: 'Active' | 'In Development' | 'Planned';
}

const { title, description, icon, status } = Astro.props;

const statusColors = {
  'Active': 'bg-green-100 text-green-800',
  'In Development': 'bg-yellow-100 text-yellow-800',
  'Planned': 'bg-gray-100 text-gray-800',
};
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <div class="flex items-start justify-between mb-4">
    <span class="text-4xl">{icon}</span>
    <span class={`text-xs font-semibold px-3 py-1 rounded-full ${statusColors[status]}`}>
      {status}
    </span>
  </div>
  <h4 class="text-xl font-bold text-gray-900 mb-2">{title}</h4>
  <p class="text-gray-600">{description}</p>
</div>
