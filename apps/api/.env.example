# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_SECRET=your_secure_api_secret_here

# Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
BOT_PUBLIC_KEY=your_discord_public_key_here

# Discord OAuth (dashboard login)
DISCORD_CLIENT_ID=your_discord_app_client_id_here
DISCORD_CLIENT_SECRET=your_discord_app_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback
DISCORD_SCOPE=identify guilds
DASHBOARD_URL=http://localhost:4321

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Database (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/pawsitive

# CORS (optional - comma-separated origins)
CORS_ORIGINS=http://localhost:4321,https://pawsitive.app
